<div class="container">
  <div class="row">
    <div class="col-4">
      <h2>商品詳細</h2>
      <%= image_tag @item.get_image, width: 300, height: 200 %>
    </div>
    <div class="col-6">
      <table class="table">
          <tr>
            <th scope="col">商品名</th>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <th scope="col">商品説明</th>
            <td><%= @item.introduction %></td>
          <tr>
            <th scope="col">税込価格</br>(税抜価格)</th>
            <td><%= @tax_included_price %> (税抜価格: <%= @item.price %>)</td>
          </tr>
        </table>
        <%= link_to '編集する', edit_admin_item_path(@item.id), class: "btn btn-success" %>
    </div>
  </div>
</div>