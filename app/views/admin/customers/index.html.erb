<div class="container">
  <div class="row justify-content-center">
    <div class="col">
      <h1>会員一覧</h1>
      <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">会員ID</th>
          <th scope="col">氏名</th>
          <th scope="col">メールアドレス</th>
          <th scope="col">ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
  　　    <tr>
          <td><%= customer.id %></td>
          <td>
            <%= link_to(admin_customer_path(customer.id), class:"text-muted") do %>
              <%= customer.last_name %><%= customer.first_name %>
            <% end %>
          </td>
          <td><%= customer.email %></td>
          <td>
            <% if customer.is_active %>
              <p>有効</p>
            <% else %>
              <p>退会</p>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
      <tfooter><%= paginate @customers, per: 10 %></tfooter>
      </table>
    </div>
  </div>
</div>


