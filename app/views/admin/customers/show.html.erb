<div class="container">
  <div class="row">
    <div class="col">
      <h1><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h1>
      <table class="table">
        <tr><th scope="col">会員ID</th><td><%= @customer.id %></td></tr>
        <tr><th scope="col">氏名</th><td><%= @customer.last_name %> <%= @customer.first_name %></td></tr>
        <tr><th scope="col">フリガナ</th><td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td></tr>
        <tr><th scope="col">郵便番号</th><td><%= @customer.postal_code %></td></tr>
        <tr><th scope="col">住所</th><td><%= @customer.address %></td></tr>
        <tr><th scope="col">電話番号</th><td><%= @customer.telephone_number %></td></tr>
        <tr><th scope="col">メールアドレス</th><td><%= @customer.email %></td></tr>
        <tr>
          <th scope="col">会員ステータス</th>
          <td>
            <% if @customer.is_active %>
              <p class="text-success">有効</p>
            <% else %>
              <p class="text-danger">退会</p>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
  <%= link_to '編集する', edit_admin_customer_path(@customer.id), class: "btn btn-success" %>
</div>
