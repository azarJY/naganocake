<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h2 class="pt-5">ログイン</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <h3 class="pt-5">会員の方はこちらからログイン</h3>
        <table class="table">
          <tr><th class="col">メールアドレス</th>
          <td>
            <div class="field">
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
          </td>
          </tr>
          <tr><th class="col">パスワード</th>
          <td>
            <div class="field">
              <%= f.password_field :password, autocomplete: "current-password" %>
            </div>
          </td>
          </tr>
        </table>
        <div class="actions">
          <%= f.submit "ログイン", class:"btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row pt-5">
    <div class="mx-auto">
      <h3>会員登録がお済みでない方</h3>
      <p><%= link_to "こちら", new_customer_registration_path %>　から新規登録を行ってください</p>
    </div>
  </div>
</div>