<div class="container pt-5">
  <h1>マイページ</h1>
  <div class="row pt-3">
    <h3>登録情報　<%= link_to "編集する", edit_public_current_customer_path, class:"btn btn-success" %></h3>
  </div>
  <div class="row pt-3">
    <table class="table col-6">
      <tr>
        <th class="table-dark">氏名</th>
        <td>
          <%= @customer.last_name %>  <%= @customer.first_name %>
        </td>
      </tr>
      <tr>
        <th class="table-dark">カナ</th>
        <td>
          <%= @customer.last_name_kana %>  <%= @customer.first_name_kana %>
        </td>
      </tr>
      <tr>
        <th class="table-dark">郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th class="table-dark">住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th class="table-dark">電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th class="table-dark">メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
      </table>
  </div>
  <div class="row pt-5">
    <table>
      <tr><th scope="col">配送先</th><td class="pl-5"><%= link_to "一覧を見る", public_addresses_path, class:"btn btn-primary" %></td></tr>
      <tr><th scope="col">注文履歴</th><td class="pl-5"><%= link_to "一覧を見る", public_orders_path, class:"btn btn-primary" %></td></tr>
    </table>
  </div>
</div>