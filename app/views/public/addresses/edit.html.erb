<div class="container pt-5">
  <h1>配送先編集</h1>
  <div class="row pt-5">
    <%= form_with model: @address, url: public_address_path, method: :patch do |f| %>
      <table class="table">
        <tr><th scope="col"><label>郵便番号(ハイフンなし)</label></th><td><%= f.text_field :postal_code %></td></tr>
        <tr><th scope="col"><label>住所</label></th><td><%= f.text_field :address %></td></tr>
        <tr><th scope="col"><label>宛名</label></th><td><%= f.text_field :name %></td></tr>
      </table>
      <%= f.submit "変更内容を保存", class:"btn btn-success" %>
    <% end %>
  </div>
</div>